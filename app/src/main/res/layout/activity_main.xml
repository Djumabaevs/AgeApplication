<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/warm_white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_top"
        android:textColor="#9C27B0"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/age_text"
        android:textColor="@color/sky_blue"
        android:textSize="25sp"
        android:background="@color/sky_greeb"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/in_minutes"
        android:textColor="#9C27B0"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/warm_white"
        android:text="@string/select_date"
        android:textColor="@color/sky_blue"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_margin="20dp"
        android:textColor="@color/sky_greeb"
        android:text="@string/selected_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvSelectedDateInMinutes"
        android:textColor="@color/sky_greeb"
        android:layout_marginTop="20dp"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/sky_greeb"
        android:textSize="18sp"
        android:text="@string/age_in_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>